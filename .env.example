# Environment variables for Financial Analyst Advisor

# ==================== API Configuration ====================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
APP_ENV=development

# ==================== Logging ====================
LOG_LEVEL=INFO

# ==================== HuggingFace ====================
# Required for accessing LLaMA and other models
# Get token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here

# ==================== SEC Scraper ====================
# Set to true to enable SEC scraping
ENABLE_SEC_SCRAPER=false
SEC_RATE_LIMIT=0.1

# ==================== Vector Database ====================
# Options: chroma, pinecone
VECTOR_DB_TYPE=chroma
# PINECONE_API_KEY=your_pinecone_api_key  # Only if using Pinecone
# PINECONE_ENV=your_pinecone_environment

# ==================== Model Configuration ====================
# Base model to fine-tune (requires HF_TOKEN for gated models)
BASE_MODEL=meta-llama/Llama-2-7b-hf

# Local path to fine-tuned model (leave empty to train new)
FINETUNED_MODEL_PATH=models/llama_finetuned

# ==================== Fine-tuning Configuration ====================
ENABLE_FINETUNING=false
NUM_TRAIN_EPOCHS=3
TRAIN_BATCH_SIZE=4
LEARNING_RATE=0.0002
LORA_R=16
LORA_ALPHA=32

# ==================== GPU Configuration ====================
# Device: auto, cuda, cpu
DEVICE=auto
# GPU device ID if using CUDA
CUDA_DEVICE=0

# ==================== Weights & Biases (Optional) ====================
# For experiment tracking and monitoring
# WANDB_PROJECT=financial-analyst
# WANDB_ENTITY=your_wandb_username
WANDB_DISABLED=true

# ==================== File Paths ====================
# Relative paths from project root
RAW_DATA_DIR=data/raw_reports
PROCESSED_DATA_DIR=data/processed
VECTOR_DB_DIR=data/vector_db
MODELS_DIR=models
